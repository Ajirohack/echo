# API Keys - Translation Services
DEEPL_API_KEY=your_deepl_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
AZURE_TRANSLATOR_API_KEY=your_azure_translator_key_here
OPENAI_API_KEY=your_openai_api_key_here

# API Keys - Text-to-Speech Services
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
AZURE_TTS_API_KEY=your_azure_tts_api_key_here

# API Keys - AI Providers
GROQ_API_KEY=your_groq_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Service Configuration
AZURE_REGION=eastus
OPENAI_MODEL=gpt-3.5-turbo

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Audio Settings
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16

# Translation Settings
DEFAULT_SOURCE_LANGUAGE=en
DEFAULT_TARGET_LANGUAGE=es
DEFAULT_TRANSLATION_SERVICE=google
TRANSLATION_CONFIDENCE_THRESHOLD=0.7
ENABLE_CACHE=true
CACHE_SIZE=100
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=3

# Security
SESSION_SECRET=generate_a_strong_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Privacy Settings
LOG_LEVEL=info
SAVE_TRANSLATION_HISTORY=true
SHARE_USAGE_DATA=false

# Development
DEBUG=app:*,translation:*,audio:*

# Production
# NODE_OPTIONS=--max_old_space_size=4096
