{
  "name": "echo",
  "version": "1.0.1",
  "description": "echo captures audio from your microphone or system, translates it in real-time, and outputs the translated audio to communication platforms.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:prod",
    "build:dev": "webpack --config webpack.config.js --mode development",
    "build:prod": "webpack --config webpack.config.js --mode production",
    "test": "npm run test:all",
    "test:unit": "jest src/__tests__/unit --testTimeout=10000",
    "test:integration": "jest src/__tests__/integration --testTimeout=15000",
    "test:e2e": "jest src/__tests__/e2e --testTimeout=60000",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch --testTimeout=10000",
    "test:all": "npm run lint && npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "lint:styles": "stylelint 'src/**/*.css' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md,json}'",
    "type-check": "tsc --noEmit",
    "validate": "npm-run-all --parallel lint type-check test:all",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "prettier": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "setup-config": "node setup-config.js",
    "migrate-to-env": "node scripts/migrate-to-env-vars.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/speech": "^7.1.0",
    "@google-cloud/text-to-speech": "^5.0.1",
    "@google-cloud/translate": "^8.0.2",
    "audio-buffer": "^5.0.0",
    "audio-buffer-utils": "^5.1.2",
    "axios": "^1.6.2",
    "date-fns": "^4.1.0",
    "deepl-node": "^1.12.0",
    "dotenv": "^16.3.1",
    "electron-log": "^5.4.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "elevenlabs": "^1.59.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "md5": "^2.3.0",
    "microsoft-cognitiveservices-speech-sdk": "^1.34.1",
    "moment": "^2.30.1",
    "node-audiorecorder": "^3.0.0",
    "node-cache": "^5.1.2",
    "node-lame": "^1.2.3",
    "node-wav": "^0.0.2",
    "openai": "^4.28.0",
    "p-limit": "^4.0.0",
    "pcm-util": "^3.0.0",
    "pixelmatch": "^7.1.0",
    "play-sound": "^1.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "recoil": "^0.7.7",
    "ssml-builder": "^0.4.3",
    "uuid": "^9.0.1",
    "wav": "^1.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "@babel/core": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-vitest": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.4.8",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-chai-friendly": "^0.8.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-mocha": "^10.3.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^9.0.18",
    "eslint-plugin-testing-library": "^6.1.3",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-dev-server": "^11.0.0",
    "jest-environment-jsdom": "^30.1.1",
    "lint-staged": "^16.1.2",
    "nock": "^13.3.1",
    "playwright": "^1.54.1",
    "proxyquire": "^2.1.3",
    "source-map": "^0.7.4",
    "storybook": "^9.0.18",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.whytehoux.echo",
    "productName": "echo",
    "copyright": "Copyright Â© 2025 WhyteHoux.ai",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,test.js,*.test.js,*.spec.js}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/test/**/*",
      "!**/tests/**/*",
      "!**/__tests__/**/*",
      "!**/tests-disabled/**/*",
      "!**/*.test.js",
      "!**/*.spec.js",
      "!**/.github/**/*",
      "!**/.vscode/**/*",
      "!**/.git/**/*",
      "!**/.gitignore",
      "!**/.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/.eslintrc*",
      "!**/.prettierrc*",
      "!**/tsconfig*.json",
      "!**/webpack.config.*",
      "!**/coverage/**/*",
      "!**/test-reports/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "config/",
        "to": "config/",
        "filter": [
          "**/*.json"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": {
        "teamId": "YOUR_TEAM_ID"
      }
    },
    "dmg": {
      "title": "${productName} ${version}",
      "background": "build/background.png",
      "iconSize": 80,
      "iconTextSize": 12,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "publisherName": "WhyteHoux.ai",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "installerHeaderIcon": "assets/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "${productName}",
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/",
      "category": "Utility",
      "synopsis": "Real-time multi-platform translation application",
      "description": "echo captures audio from your microphone or system, translates it in real-time, and outputs the translated audio to communication platforms."
    },
    "deb": {
      "depends": [
        "pulseaudio",
        "pulseaudio-utils"
      ],
      "recommends": [
        "ffmpeg"
      ],
      "priority": "optional"
    },
    "rpm": {
      "depends": [
        "pulseaudio",
        "pulseaudio-utils"
      ],
      "recommends": [
        "ffmpeg"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "echo",
      "private": false,
      "publishAutoUpdate": true
    },
    "afterSign": "scripts/notarize.js",
    "protocols": [
      {
        "name": "echo",
        "schemes": [
          "echo"
        ]
      }
    ]
  }
}
